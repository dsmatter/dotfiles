config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY        
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY          
alias leftthird move screenOriginX;screenOriginY screenSizeX/3;screenSizeY         
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias middlethird move screenOriginX+screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY
alias tophalf move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
alias bottomhalf move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2               
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2           
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2         
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2

alias 0-full move screenOriginX;screenOriginY screenSizeX;screenSizeY 0
alias 1-full move screenOriginX;screenOriginY screenSizeX;screenSizeY 1

# Monitor Aliases
alias mon-laptop      1920x1080
alias mon-dell        2560x1440
alias mon-benq        1920x1080

# Position Aliases
alias fullscreen  move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias rightthird  move screenOriginX+2*screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY
alias editor      move screenOriginX+17*screenSizeX/48;screenOriginY+0*screenSizeY/24 31*screenSizeX/48;12*screenSizeY/12
alias terminal    move screenOriginX+6*screenSizeX/24;screenOriginY+5*screenSizeY/24 10*screenSizeX/24;15*screenSizeY/24
alias terminal_r  move screenOriginX+12*screenSizeX/24;screenOriginY+5*screenSizeY/24 9*screenSizeX/24;15*screenSizeY/24
alias mail        move screenOriginX+3*screenSizeX/24;screenOriginY+3*screenSizeY/24 15*screenSizeX/24;18*screenSizeY/24
alias calendar    move screenOriginX+5*screenSizeX/24;screenOriginY+5*screenSizeY/24 11*screenSizeX/24;15*screenSizeY/24
alias todo        move screenOriginX+7*screenSizeX/24;screenOriginY+9*screenSizeY/24 10*screenSizeX/24;13*screenSizeY/24
alias news        move screenOriginX;screenOriginY 5*screenSizeX/24;screenSizeY
alias twitter     move screenOriginX+5*screenSizeX/24;screenOriginY 5*screenSizeX/24;screenSizeY
alias messages    move screenOriginX+20*screenSizeX/24;screenOriginY 4*screenSizeX/24;screenSizeY
alias skype       move screenOriginX+10*screenSizeX/24;screenOriginY 10*screenSizeX/24;screenSizeY


