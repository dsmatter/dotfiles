# Location Bindings
bind pad5:ctrl ${editor}     ${mon-dell}
bind pad6:ctrl ${editor}     ${mon-benq}
bind pad8:ctrl ${terminal}   ${mon-dell}
bind pad9:ctrl ${terminal}   ${mon-benq}
bind pad7:ctrl ${terminal_r} ${mon-dell}
bind pad0:ctrl ${fullscreen} ${mon-dell}
bind pad1:ctrl ${fullscreen} ${mon-benq}

bind 1:cmd;alt ${editor}     
bind 2:cmd;alt ${terminal}   
bind 3:cmd;alt ${fullscreen}
bind 3:cmd;alt;ctrl;shift ${fullscreen}
bind 4:cmd;alt ${twitter}    
bind 5:cmd;alt ${news}       

bind 7:cmd;alt ${fullscreen} previous
bind 9:cmd;alt throw next resize ${fullscreen}
bind 4:cmd;alt;ctrl;shift throw next resize ${fullscreen}

