### Layouts

## Laptop display only
layout laptop 'MacVim'              ${editor}     ${mon-laptop}
layout laptop 'Sublime Text'        ${editor}     ${mon-laptop}
layout laptop 'Sublime Text 2'      ${editor}     ${mon-laptop}
layout laptop 'Google Chrome'       ${fullscreen} ${mon-laptop}
layout laptop 'Mail'                ${mail}       ${mon-laptop}
layout laptop 'Calendar'            ${calendar}   ${mon-laptop}
layout laptop 'Wunderlist'          ${todo}       ${mon-laptop}
layout laptop 'Cream'               ${news}       ${mon-laptop}
layout laptop 'Tweetbot'            ${twitter}    ${mon-laptop}
layout laptop 'Adium'               ${messages}   ${mon-laptop}
layout laptop 'Skype'               ${skype}      ${mon-laptop}

## 2 Stationary Monitors
layout 2monitors 'MacVim'           ${editor}     ${mon-dell}
layout 2monitors 'Sublime Text'     ${editor}     ${mon-dell}
layout 2monitors 'Sublime Text 2'   ${editor}     ${mon-dell}
layout 2monitors 'Google Chrome'    ${fullscreen} ${mon-dell}
layout 2monitors 'Mail'             ${mail}       ${mon-dell}
layout 2monitors 'Calendar'         ${calendar}   ${mon-dell}
layout 2monitors 'Wunderlist'       ${todo}       ${mon-dell}
layout 2monitors 'Cream'            ${news}       ${mon-benq}
layout 2monitors 'Tweetbot'         ${twitter}    ${mon-benq}
layout 2monitors 'Adium'            ${messages}   ${mon-benq}
layout 2monitors 'Skype'            ${skype}      ${mon-benq}

## Laptop + 2 Stationary Monitors
layout 3monitors 'MacVim'           ${editor}     1
layout 3monitors 'Sublime Text'     ${editor}     1
layout 3monitors 'Sublime Text 2'   ${editor}     1
#layout 3monitors 'Google Chrome'    ${fullscreen} 1
layout 3monitors 'Mail'             ${mail}       1
layout 3monitors 'Calendar'         ${calendar}   1
layout 3monitors 'Wunderlist'       ${todo}       1
layout 3monitors 'Cream'            ${news}       ${mon-benq}
layout 3monitors 'Tweetbot'         ${news}       ${mon-dell}
layout 3monitors 'Adium'            ${messages}   ${mon-benq}
layout 3monitors 'Skype'            ${skype}      ${mon-benq}
layout 3monitors 'Activity Monitor' ${rightthird} ${mon-benq}

