[user]
	name = Daniel Strittmatter
	email = daniel@smattr.de
[alias]
  co = checkout
  cob = checkout -b
  wip = !git add -u && git commit -m "WIP" 
  undo = reset HEAD~1 --mixed
  ci = commit
  k = gui
  cp = cherry-pick
  s = status -uno
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  ec = config -global -e
  dl = clone --depth 1
  untracked = ls-files --others --exclude-standard
  mff = merge --no-ff
  sub = submodule
  subdate = submodule update
[color]
  ui = auto
[push]
	default = current
[core]
	excludesfile = /Users/smatter/.gitignore_global
	precomposeunicode = true
	editor = vim -c \"startinsert!\"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
