[user]
	name = Daniel Strittmatter
	email = daniel@lockitnetwork.com
[alias]
  co = checkout
  cob = checkout -b
  wip = !git add -u && git commit -m "WIP" 
  undo = reset HEAD~1 --mixed
  ci = commit
  k = gui
  cp = cherry-pick
  s = status -uno
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit --all
  ec = config -global -e
  dl = clone --depth 1
  untracked = ls-files --others --exclude-standard
  mff = merge --no-ff
  ff = merge --ff-only
  sub = submodule
  subdate = submodule update
  puu = push -u origin HEAD
  sdiff = diff --cached
  mergeAll = !git branch --contains HEAD --no-merge | xargs git merge
[color]
  ui = auto
[push]
  default = simple
[core]
	excludesfile = /Users/smatter/.gitignore_global
	precomposeunicode = true
	editor = nvim -c \"startinsert!\"
[commit]
	template = /Users/smatter/.stCommitMsg
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
